function GSRHydroTranny_edit(rt) {

	var G1Ratio, G2Ratio, G3Ratio, G4Ratio;

	rom.gup();
	if (rom.base > 2){
	  rom.byteAt(kG1RatioAddress) = eval('0x' + DecToHex(70));
          rom.byteAt(kG2RatioAddress) = eval('0x' + DecToHex(110));
          rom.byteAt(kG3RatioAddress) = eval('0x' + DecToHex(154));
          rom.byteAt(kG4RatioAddress) = eval('0x' + DecToHex(196));
	}else {
          rom.wordAt(kG1RatioAddress) = eval('0x00' + DecToHex(70));
          rom.wordAt(kG2RatioAddress) = eval('0x00' + DecToHex(110));
          rom.wordAt(kG3RatioAddress) = eval('0x00' + DecToHex(154));
          rom.wordAt(kG4RatioAddress) = eval('0x00' + DecToHex(196));
        }
        rom.gup();
}

